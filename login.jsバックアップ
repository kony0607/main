document.addEventListener('DOMContentLoaded', function(event) {

  const targetElement = document.getElementById('passwordInput');
  const triggerElement = document.getElementById('inputCheckbox');

  triggerElement.addEventListener('change', function(event) {
    if ( this.checked ) {
      targetElement.setAttribute('type', 'text');
    } else {
      targetElement.setAttribute('type', 'password');
    }
  }, false);

}, false);


const loginButton = document.getElementById('logindesu');
loginButton.addEventListener('click', () => {
   const selectElement = document.getElementById('course-select'); // <select> の ID を指定
  const selectedValue = selectElement.value || '0'; // 選ばれていないときは '0'

  location.href = `main.html?course=${courseValue}`;
});

